<script>
  (function () {
    var correctPassword = '{{ section.settings.access_password }}';
    var collectionHandle = '{{ collection.handle }}';
    var storageKey = 'unlocked_collection_' + collectionHandle;

    var gate = document.getElementById('password-gate');
    var content = document.getElementById('collection-content-wrapper');
    var input = document.getElementById('password-input');
    var submitBtn = document.getElementById('password-submit');
    var errorMsg = document.getElementById('password-error');

    function unlock() {
      if (gate) gate.style.display = 'none';
      if (content) content.classList.add('unlocked');

      // Trigger resize to fix any layout scripts
      setTimeout(function () {
        window.dispatchEvent(new Event('resize'));
        window.dispatchEvent(new Event('scroll'));
      }, 100);
    }

    // Check if duplicate storage key exists (already unlocked)
    if (sessionStorage.getItem(storageKey) === 'true') {
      unlock();
    } else if (correctPassword === '') {
      // If no password set, auto unlock
      unlock();
    }

    if (submitBtn) {
      submitBtn.addEventListener('click', function () {
        var entered = input.value;
        if (entered === correctPassword) {
          sessionStorage.setItem(storageKey, 'true');
          unlock();
        } else {
          errorMsg.style.display = 'block';
        }
      });
    }

    if (input) {
      // Allow Enter key
      input.addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
          if (submitBtn) submitBtn.click();
        }
      });
    }
  })();
</script>

<script>
  (function () {
    document.addEventListener('DOMContentLoaded', function () {
      var container = document.getElementById('meta-collection-filter-container');
      var buttonContainer = document.getElementById('meta-collection-buttons');
      var products = document.querySelectorAll('.grid__item[data-meta-collection]');

      var uniqueCollections = new Set();

      products.forEach(function (product) {
        var rawData = product.getAttribute('data-meta-collection');
        if (rawData && rawData.trim() !== '') {
          var parts = rawData.split('|||');
          parts.forEach(function (part) {
            if (part && part.trim() !== '') {
              uniqueCollections.add(part.trim());
            }
          });
        }
      });

      if (uniqueCollections.size > 0) {
        container.classList.remove('hidden');

        // Add "All" button
        var allBtn = document.createElement('button');
        allBtn.innerText = 'Todas';
        allBtn.className = 'btn btn-secondary btn-sm active-filter';
        allBtn.onclick = function () {
          filterGrid('all');
          updateActiveButton(this);
        };
        buttonContainer.appendChild(allBtn);

        // Sort just for nicer display
        var sortedCols = Array.from(uniqueCollections).sort();

        sortedCols.forEach(function (colName) {
          var btn = document.createElement('button');
          btn.innerText = colName;
          btn.className = 'btn btn-secondary btn-sm';
          btn.onclick = function () {
            filterGrid(colName);
            updateActiveButton(this);
          };
          buttonContainer.appendChild(btn);
        });
      }

      function filterGrid(collectionName) {
        products.forEach(function (product) {
          var rawData = product.getAttribute('data-meta-collection');
          var productCollections = [];

          if (rawData) {
            productCollections = rawData.split('|||').map(function (s) {
              return s.trim();
            });
          }

          if (collectionName === 'all' || productCollections.includes(collectionName)) {
            product.style.display = '';
          } else {
            product.style.display = 'none';
          }
        });
        // Trigger resize for layout
        window.dispatchEvent(new Event('resize'));
        window.dispatchEvent(new Event('scroll'));
      }

      function updateActiveButton(activeBtn) {
        var btns = buttonContainer.querySelectorAll('button');
        btns.forEach(function (b) {
          b.classList.remove('active-filter');
        });
        activeBtn.classList.add('active-filter');
      }
    });

    // Add custom styles for active state
    var style = document.createElement('style');
    style.innerHTML = `
        .active-filter {
            background-color: var(--color-heading) !important;
            color: var(--color-background) !important;
            border-color: var(--color-heading) !important;
        }
    `;
    document.head.appendChild(style);
  })();
</script>
